MDScreen:
    name:"touch_id"
    MDFloatLayout:
        md_bg_color:0/255, 14/255, 51/255, 1
        MDIconButton:
            icon:"arrow-left"
            theme_text_color:"Custom"
            text_color: 1, 1, 1, 1
            user_font_size:"30sp"
            pos_hint: {"center_y": .9}
            on_release:
                root.manager.current ="signup"

        Image:
            source:"assets/about-banner.png"
            pos_hint:{"center_x":.9, "center_y": .91}
            size_hint: .1, .1
        MDLabel:
            text:"Set Touch ID"
            pos_hint:{"center_x": .5, "center_y": .77}
            halign:"center"
            font_name:"Poppins-Regular"
            color: 1, 1, 1, 1
            font_size: "22sp"

        # Image:
        #     source:"assets/fingerprint.png"
        #     pos_hint:{"center_x": .5, "center_y": .77}
        Image:
            source: "assets/fingerprint.png"
            size_hint: .26, .26
            pos_hint: {"center_x": .5, "center_y": .55}
            canvas.before:
                Color:
                    rgb:1,1,1,1
                Ellipse:
                    size: 130, 130
                    pos: 110, 250
        MDLabel:
            text:"Continously Place Your Finger on the Sensor."
            size_hint_x: .88
            pos_hint:{"center_x":.5,"center_y": .3}
            halign:"center"
            font_name:"Poppins-Regular.ttf"
            color: 1, 1, 1, 1
        MDLabel:
            text:"OR"
            pos_hint:{"center_x":.5,"center_y": .2}
            halign:"center"
            font_name:"Poppins-Regular.ttf"
            color: 1, 1, 1, 1

        MDFlatButton:
            id: submit
            text: "USE PASSWORD"
            size_hint: .79, .08
            font_name:"Poppins-Medium.ttf"
            pos_hint:{"center_x": .5, "center_y": .10}
            
            canvas.before:
                Color:
                    rgb:41/255, 135/255,168/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [6]
            on_release:
                app.root.current ="login"
               





