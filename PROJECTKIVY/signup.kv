MDScreen:
    name:"signup"
    MDFloatLayout:
        id:login_layout
        md_bg_color: 1,1,1,1

        MDIconButton:
            icon:"chevron-left"
            user_font_size:"35sp"
            pos_hint:{"center_y": .95}
            on_release:
                app.root.current = "pre-splash"

        Image:
            source:"assets/about-banner.png"
            size_hint:.30, .30
            pos_hint: {"center_x": .22, "center_y": .8}

        MDLabel:
            text:"Back"
            font_size:"17sp"
            font_name: "Poppins-Regular.ttf"
            pos_hint:{"center_x":.615, "center_y":.949}
        MDLabel:
            text:"MUBS-HUB"
            font_size:"32sp"
            font_name: "Poppins-Regular.ttf"
            pos_hint:{"center_x":.917, "center_y":.849}
        MDLabel:
            text:"Taste the delicacy"
            font_size:"15sp"
            font_name: "Poppins-Italic.ttf"
            pos_hint:{"center_x":.915, "center_y":.790}
            color: 120/255,120/255,120/255,1

        MDLabel:
            text:"SIGNUP FORM"
            font_size:"20sp"
            font_name: "Poppins-Regular.ttf"
            pos_hint:{"center_x":.910, "center_y":.730}
            

        MDTextField:
            id: input_email
            hint_text: "New_Email"
            helper_text: ""
            font_name:"Poppins-Regular.ttf"
            helper_text_mode:"persistent"
            pos_hint:{"center_x": .5, "center_y": .52}

            size_hint_x: .85
            line_color_focus: 0,0,0,1

        Image:
            source:"assets/email1.png"
            size_hint_x: .10
            pos_hint:{"center_x":.90, "center_y": .54}

        MDTextField:
            id: input_password
            hint_text: "Confirm_Password"
            helper_text: ""
            font_name:"Poppins-Regular.ttf"
            helper_text_mode:"persistent"
            pos_hint:{"center_x": .5, "center_y": .42}

            size_hint_x: .85
            line_color_focus: 0,0,0,1
            password: True

        Image:
            source:"assets/password1.png"
            size_hint_x: .07
            pos_hint:{"center_x":.90, "center_y": .44}

        MDTextButton:
            text:"Already Have an Account LOGIN?"
            font_size:"9sp"
            font_name:"Poppins-Regular.ttf"
            haling:"center"
            color:120/255,120/255,120/255,1
            pos_hint:{"center_x": .715, "center_y": .370}
            on_release:
                app.root.current ="login" if input_email.text =="" and input_password.text =="" else "signup"

        MDFlatButton:
            id: submit
            text: "CONTINUE"
            size_hint: .79, .08
            font_name:"Poppins-Medium.ttf"
            pos_hint:{"center_x": .50, "center_y": .25}
            
            canvas.before:
                Color:
                    rgb:41/255, 135/255,168/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [6]
            on_release:
                app.root.current ="touch_id"
            


    


